<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffaaaaaa"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.lijun.progressbar.leafloading.LeafLoadingProgressBar
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        app:leaf_rotate_time="1000"
        app:leaf_move_float_time="2000"
        app:leaf_color="@color/leafloading_default_leaf_color"
        app:fan_rotate_time="1000"
        app:fan_color="@color/leafloading_default_fan_color"
        app:background_color="@color/leafloading_default_backgroud_color"
        app:empty_progress_color="@color/leafloading_empty_progress_color"
        />


    <!--<com.lijun.progressbar.leafloading.TestView
        android:layout_width="200dp"
        android:layout_height="200dp" />-->
</RelativeLayout>
